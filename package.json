{
  "name": "wpfxm",
  "version": "0.1.0",
  "config": {
    "dev_port": "3000"
  },
  "private": true,
  "main": "build/core/main.js",
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@types/node": "^12.12.62",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "dev": "NODE_ENV=development concurrently npm:dev:react npm:dev:main:watch npm:dev:electron",
    "dev:react": "NODE_ENV=development PORT=$npm_package_config_dev_port react-app-rewired start",
    "dev:main": "tsc -p src/main",
    "dev:main:watch": "tsc -p src/main -w",
    "dev:electron": "NODE_ENV=development wait-on http://localhost:$npm_package_config_dev_port && npm run dev:main && electron .",
    "electron": "electron .",
    "build": "react-app-rewired build && npm run dev:main"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 2 chrome version"
    ],
    "development": [
      "last 2 chrome version"
    ]
  },
  "devDependencies": {
    "@yarnpkg/pnpify": "^2.2.1",
    "concurrently": "^5.3.0",
    "electron": "^10.1.1",
    "react-app-rewired": "^2.1.6",
    "typescript": "~4.0.3",
    "wait-on": "^5.2.0"
  }
}
